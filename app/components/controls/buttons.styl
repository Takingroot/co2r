
.c-btn
  a&
    display inline-block

  border none
  color textColorLight
  padding .75em 1.25em
  background-color dark
  &:hover
    background-color darken(dark,10)
    color lighten(textColorLight, 10)

  &.c-btn-subtle
    background-color fade-out(dark, 0.9)
    color textColorDark
    &:hover
      background-color fade-out(dark, 0.85)
      color darken(textColorDark, 10)
    &:active
      background-color fade-out(dark, 0.65)
      color darken(textColorDark, 20)

@import "../../lib/client/styles"
@import "variables"

.co2r-definition
  border-bottom 1px dashed hsl(0,0,75)
  color inherit
  &:hover
    background-color hsl(0,0,98)
    outline 3px solid hsl(0,0,98)

html
  background-color dark

#app-content
  background-color white

.app-footer-content
  padding gd(1)

.app-navbar
  padding-left gd(1)
  padding-right  gd(1)
  margin-bottom 0

.introduction-container
  margin-top gd(2)
  padding 0 gd(2)

.introduction-figure
  rectangle(gd(20) gd(10))

.a-image-160
  height gd(8)

.dark-theme
  background-color dark

.form-search
  margin-top gd(2)
  margin-bottom gd(2)



.directory
  .app-footer
    margin-top gd(4)

.faq-table-of-contents
  //background-color #dceaf4
  width 40%
  padding gd(2)
.faqs
  padding gd(2)

.faq-table-of-contents .ui-scrollfix
  top 40px

.ui-scrollfix.scrollfix-fixed
  position fixed

.dark-theme
  color grey


.artifact-cards
  padding-left gd(1)
  padding-right gd(1)

.artifact-card-info
  padding-left gd(.5)

.artifact-card-image
  background-color dark
  img
    width 100%
    max-height 100%



.involvement-type
  padding gd(1)
  width 40%
  .jar
    width cols(6)

.involvement-form
  padding gd(1)
  button
    height gd(4)

.co2-contrasted
  cursor default
  background-color #EEF2F3
  padding 2px 6px 4px 4px
  display inline-block
  i
    margin-top -2px

.emissions-badge
  padding 6px 10px 8px 10px
  border-radius 4px
  background white

.co2-keyword:after
  content: "\00a0 \f0c2 \00a0"
  font-family: FontAwesome
  font-weight: normal
  font-style: normal
  display: inline-block
  text-decoration: inherit


.spread-the-word
  position fixed
  bottom 0

.spread-the-word.scrolled-to
  position absolute
  top 0
  bottom auto
  .inner
    position absolute
    bottom 0

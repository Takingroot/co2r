


header.app-header(ng-controller="header")
  .row
    a.app-brand-container.cols6.grid-push1.transparent-link.row(href="/")
      .app-logo.cols4
        img(src="/images/co2r-logo.png")
      .app-brand-text.cols8
        h1.text-heading4.app-title(bind-compile="appText.co2r")
        p.text-small(bind-compile="appText.branding_subtext")

    div.app-navbar.cols4
      div.nav-item(
      ng-class="{'current-view':isCurrentView(navItem.url)}",
      class="{{navItem.label | slugify}}",
      ng-repeat="navItem in navItems")
        a.nav-link.transparent-link(href="{{navItem.url}}")
          i.nav-link-icon(class="icon-{{navItem.icon}}")
          span.nav-link-text {{appText[navItem.label]}}

  a.text-small.language-switcher.c-btn.c-btn-subtle.pin-tl(ng-click="useOtherLanguage()", ng-bind="otherLanguage() | languageName")

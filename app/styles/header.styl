


.app-header
  border-bottom 1px solid darkMuted
  & > .row
    padding 0

.app-navbar
  .nav-link
    padding-left 1rem
    padding-right 1rem
    display block
    &:hover
      background-color fade-out(dark, 0.9)
      color darken(textColorDark, 20)
  .nav-item.current-view .nav-link
    cursor default
    background-color dark
    color textColorLight
  .nav-link-icon
    // Add spacing between icon/text equal to button padding
    margin-right 1rem
    font-size 1.5rem
    // vertical center because font-awesome fails by a few a pixels
    vertical-shift(0.15em)







@media mq-screen-xs
  .app-logo img
    max-width 180px
  .app-brand-container
    padding 2rem
    border-bottom 1px solid gray
    text-align center
  .app-navbar
    .nav-item
      width 100%

@media mq-screen-s-down
  .app-brand-container
    padding 2rem!important

@media mq-screen-s-up
  .app-brand-container
    padding-right grid-gutter-width !important
    // adjust
    padding-top    3rem
    padding-bottom 3rem
    //  new
  .app-navbar
    border-left 1px solid gray
    padding-left 0!important

// Limay section
// --------------------------------------------------

.limay
  background-image url('/images/white-hash-100.png')
  background-color grayMuted
  border-bottom 1px solid grayMuted

.limay-text
  width 50%
  max-width 600px

.limay-map-container
  width 50%

.limay-map
  width 100%
  height 900px

.limay-map-tip
  background url('/images/white-hash-20.png') yellow
  padding 0.5rem 1rem
.map-tip-icon
  width 24px
.map-tip-content
  padding-top 6px
  padding-left 1rem




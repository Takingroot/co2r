.app-navbar
  .nav-list
    margin 0
  .nav-item
    // Important: Source order
    // - the following selectors are in order
    //   the lower ones override the upper ones
    .nav-link:hover
      background-color fade-out(dark, 0.98)
      color darken(textColorDark, 20)
    .nav-link:hover
      background-color fade-out(dark, 0.9)
      color darken(textColorDark, 20)
    &.current-view .nav-link
      cursor default
      background-color dark
      color textColorLight
  .nav-link
    padding 0.7em 1.5em
  .nav-link-icon
    font-size 1.5rem
    // vertical center because font-awesome fails by a few a pixels
    vertical-shift(0.05em)



.tooltip.nav-item
  tooltip-background-color(dark)
  .tooltip-inner
    padding-top 1px
    border-radius 0
    font-size 0.8rem
    line-height 1.5
    min-height gd(3)
  // put padding on content containers
  // so that we can allow width/padding
  // to be on the same container
  .tooltip-content-title
    margin-top 0.5em
    margin-bottom 0
    // no vertical padding, h{n} tag provides vertical space
    padding-left 1em
    padding-right 1em
  .tooltip-content-body
    width 180px
    padding-top 0
    padding 1em
    // centering for when content title is wider than body
    margin-left auto
    margin-right auto




@media mq-screen-xs
  .app-brand-container
    padding-top 2rem
    padding-bottom 2rem
    border-bottom 1px solid gray
    text-align center
    img
      max-width 140px
  .app-navbar
    .nav-item
      width 100%
      a
        padding-top    1rem
        padding-bottom 1rem



@media mq-screen-s-up
  .app-brand-container
    // adjust
    padding-top    4rem
    padding-bottom 4rem
    //  new
    border-right 1px solid gray
    img
      width 100%
  .app-navbar
    .nav-item
      display table
      a
        display inline-block

@media mq-screen-m-up
  .app-navbar
    margin-top 3rem

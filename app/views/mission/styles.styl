

body.mission
  .app-footer
    margin-top 4rem

  .introduction
    background-image url('/images/white-hash-20.png')
    padding-top 1em

  .moodshot
    background-image  url('/images/mission-moodshot.jpg')
    background-repeat no-repeat
    background-size cover
    background-position center



// Limay section
// --------------------------------------------------

.limay
  background-image url('/images/white-hash-100.png')
  background-color grayMuted
  border-bottom 1px solid grayMuted

.limay__map-container
  padding 0

.limay__map
  min-height 20rem

.limay__map-tip
  background-image url('/images/white-hash-20.png')
  font-size 0.8rem

.map-tip__icon
  margin-top 0.15em
  font-size 1rem
.map-tip__body
  padding-left 1.5rem

.limay__text
  padding-bottom 1em

@media screen-s-up
  .limay__map
    height gd(18)


// Essay Sections
// --------------------------------------------------

.limay__text,
.chapter-text
  column-width 20rem
  column-gap gd(1.5)

.essay-chapter-2
  background-image url('/images/white-hash-100.png')
  background-color grayMuted
  border-top 1px solid grayMuted
  border-bottom 1px solid grayMuted




//  Timeline Header (navigation, column labels (years))
//  ---------------------------------------------------

.timeline-header
  user-select none
  .can-scrollfix
    z-index 10
  .is-scrollfix
    top 0
  .timeline-item
    height 52px
  .year-title
    //  vertically center the labels (years)
    padding-top 0.45em

//  Navigation

.timeline-navigation
  button
    width 52px
    height 52px

.timeline-navigation-right
.timeline-navigation-left
  z-index 20

.timeline-navigation-right
  border-left 1px solid black

.timeline-navigation-left
  border-right 1px solid black



//  Timeline Structure
//  ------------------

.timeline-conductor
  white-space nowrap

  //&.ui-scrollfix
  //padding-top 72px

.timeline-slider-window
  overflow hidden

.timeline-slider
  transition left 250ms

.timeline-item
  white-space normal
  border-left 1px dashed grayMuted
  &:last-child
    border-right 1px dashed grayMuted

.chart-labels
  border-top 1px solid darkMuted

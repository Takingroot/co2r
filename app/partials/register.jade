header
  .header-inner.row.align-center.v-push-3

    .introduction.span-4
      h1.aligns-middle
        i.icon-file
        = ' '
        span(bind-compile="appText.register_your_product")
      p(bind-compile="appText.register_introduction")

    form.vintage-box-models.h-push-1(ng-submit="sendForm()", name="artifactRegistrationForm")
      .row.h-gutters-1
        textarea(rows="6", placeholder="{{appText.your_message}}", ng-model="org.message", required)
        div
          .control-group
            .input-prepend
              label.add-on(for="name"): i.icon-user
              input#name(type="text", placeholder="{{appText.name_or_organization}}", ng-model="org.name", required)
          .control-group
            .input-prepend
              label.add-on(for="email"): i.icon-envelope
              input#email(type="email", placeholder="{{appText.email}}", ng-model="org.email", required)
          .control-group
            .input-prepend
              label.add-on(for="phone"): i.icon-phone
              input#phone(type="text", placeholder="{{appText.phone}}", ng-model="org.phone", required)
          button.btn.span(style="box-sizing:border-box;", ng-bind="appText.inquire", ng-disabled="!artifactRegistrationForm.$valid")


section.register-info-container.row.row-couple-heights.v-push-3
  aside.register-info-aside.row.padding-l
    .align-right.span-3
      div(bind-compile="appText.register_artifact_left_column")
  .register-info-body.padding-l
    div.span-5.v-gutters-3(bind-compile="appText.register_artifact_right_body")



.post-artifact-registration-message.modal(style="display:none")
  .modal-header
    button.close(data-dismiss="modal") &times;
    h1 Thank-you!
  .modal-body
    p
      | Your registration request has been sent!
      br
      | This is the email that you sent:
    pre(ng-bind-html="email.message")




body.artifact

  .reports
    padding-bottom gd(10)

  section.about
    background-image url('/images/white-hash-20.png')

  section.organization
    // color vars because of font-awesome selection limitations
    background-color-value     = hsl(90.00, 7.69%, 94.90%)
    contact-method-color       = fade-out(dark, 0.75)
    contact-method-color-hover = dark
    background-color background-color-value

    .contact-methods
      margin-top gd(1/4)

    .contact-method
      square(38px)
      line-height 38px
      text-align center
      i
        // undo fontawesome
        width auto

        font-size 2.75rem
        line-height 0.9
        color contact-method-color
        &:hover
          color contact-method-color-hover

    // due to font-awesome not having an icon-email-sign etc.
    .contact-method-website
    .contact-method-email
    .contact-method-other
      font-size 3.25rem
      background-color contact-method-color
      padding-top 9px
      border-radius 5px
      &:hover
        background-color contact-method-color-hover
      i
        vertical-align top
        font-size 1.5rem
        color background-color-value
        &:hover
          color background-color-value

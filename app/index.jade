html(ng-app="co2r", ng-controller="app", xmlns:fb="http://ogp.me/ns/fb#")
  head
    //-
      script
        window.brunch = window.brunch || {}
        window.brunch['auto-reload'] = {enabled: true}
    link(rel="stylesheet", href="/stylesheets/app.css")
    script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyACK0sp5adiQxeaADP87y6y_tX16aBVXQU&sensor=false")
    script(src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-507eafc6229c934d")
    script(src="/javascripts/vendor.js")
    script(src="/javascripts/app.js")
    title(ng-bind="getPageTitle()")



  body(ng-class="appCssClasses", data-spy="scroll", data-target=".faq-toc")
    header.app-header.row(ng-controller="header")
      a.app-brand-container.span-4.row.transparent-link(href="/")
        .app-logo
          img(src="/images/co2r-logo.png")
        .app-brand-text
          h1.text-heading4.app-title(co2r-bind="appText.co2r")
          p.text-small.span-2(co2r-bind="appText.branding_subtext")

      .app-navbar.align-right
        ul.nav.nav-list.align-right.row.aligns-middle
          li.nav-item(ng-class="{'current-view':isCurrentView(navItem.url)}", class="{{navItem.label | slugify}}",
          tooltip="navItem.tooltipConfig", ng-repeat="navItem in navItems")
            a.nav-link.transparent-link.aligns-middle(href="{{navItem.url}}")
              i.nav-link-icon(class="icon-{{navItem.icon}}")
              span.nav-link-text {{appText[navItem.label]}}

      a.text-small.language-switcher.c-btn.c-btn-subtle.pin-top.pin-right(ng-click="useOtherLanguage()", ng-bind="otherLanguage() | languageName")



    #app-content.app-content(ng-view="ng-view")



    footer.app-footer.group(ng-controller="footer")
      //- .stripe div just for decoration
      .stripe.span.pin-top

      .social-bar.social-bar-app(scrollfix="{until:'.app-footer', windowAnchor:'bottom', padding:-16}")
        .social-bar-inner.row.aligns-middle.padding-s
          div(co2r-bind="appText.social_bar_text")
          .social-bar-buttons.co2r-addthis-toolbox.row.h-gutters-05

      .app-footer-content.row.group.span.color-theme.green-theme.padding-l.clearfix
        div.app-epilogue
          .owner.span-2
            a.logo-container(href="{{takingRoot.website_url}}", target="_blank")
              img.logo.logo-taking-root(ng-src="{{takingRoot.logo_url}}")
            p.text-small(co2r-bind="takingRoot.partnership_description")

          .v-push-3
            p.muted(co2r-bind="appText.footer_colofon")

        section.partners-container
          header.partners-header
            h1.text-heading3(ng-bind="appText.footer_partners_title")
          .partners.row.h-gutters-1.v-push-1
            .partner(ng-repeat="partner in partners")
              a.logo-container.row.aligns-middle(href="{{partner.website_url}}", target="_blank")
                .v-span
                img.logo(ng-src="{{partner.logo_url}}")
              p.text-small(co2r-bind="partner.partnership_description")

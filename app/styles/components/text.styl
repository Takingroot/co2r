


.text-heading1, h1
  font-size 3rem
  line-height 1.25
@media screen-m-up
  .text-heading1, h1
    font-size 4rem

.text-heading2, h2
.lead
  font-size 1.8rem
  line-height text-line-height-base
  font-weight 400
@media screen-m-up
  .text-heading2, h2
    font-size 2.333rem

.text-heading3, h3
  // !important to override BS input font sizing...
  //font-size 1.75rem!important
  font-size 1.75rem
  line-height text-line-height-base

.text-heading4, h4
  font-size 1.25rem
  line-height text-line-height-base

.text-small, small
  font-size 0.8rem
  line-height 1.5

// same thing that is applied to baody
.text-body
  font-size text-size-base
  line-height text-line-height-base

.text-color-inverse
  color textColorInverse

// this needs to be defined after heading
// classes to override them
.unspaced
  margin-top 0
  margin-bottom 0
  line-height 1

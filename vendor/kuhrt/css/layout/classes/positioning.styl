


//
//  Absolute
//  ------------------------------------------------------------------

[class*="pin-"]
  position absolute

.pin-top
  top 0

.pin-left
  left 0

.pin-right
  right 0

.pin-bottom
  bottom 0

[class*="hang-"]
  position absolute



//
//  Hanging
//  ------------------------------------------------------------------

.hang-left
  left 0
  > .hang-inner
    right 0

.hang-right
  right 0
  > .hang-inner
    left 0

.c-btn

  color nlight-text
  padding .75em 1.25em
  background-color ndark
  &:hover
    background-color darken(ndark,10)
    color lighten(nlight-text, 10)

  &.c-btn-subtle
    background-color fade-out(ndark, 0.9)
    color ndark-text
    &:hover
      background-color fade-out(ndark, 0.85)
      color darken(ndark-text, 10)
    &:active
      background-color fade-out(ndark, 0.65)
      color darken(ndark-text, 20)


.ty-section-title
  font-size 4rem
  line-height 1.25
  font-weight normal

body.about
  .moodshot
    background-image url('/images/white-hash-20.png'), url('/images/mission-moodshot.jpg')
    background-repeat repeat, no-repeat
    background-size auto, cover
    background-position top, center
    height gd(22)
  .app-footer
    margin-top 8rem


.limay
  background-image url('/images/white-hash-100.png')
  background-color ngrey-subtle
  border-bottom 1px solid ngrey-subtle

.limay-map-container
  width 50%

.limay-map-tip
  background url('/images/white-hash-20.png') nyellow
  padding 0.5rem 1rem

.map-tip-icon
  width 24px
.map-tip-content
  padding-top 6px
  padding-left 1rem

.limay-map
  width 100%
  height 900px

.limay-text
  padding gd(2) gd(3)
  width 50%
  max-width 600px

.essay-chapter
  padding 5rem

.chapter-title
  width 400px

.chapter-text
  column-width 400px
  column-gap 60px

.essay-chapter-2
  background-image url('/images/white-hash-100.png')
  background-color ngrey-subtle
  border-top 1px solid ngrey-subtle
  border-bottom 1px solid ngrey-subtle

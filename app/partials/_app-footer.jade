footer.app-footer.group

  .app-footer-content.dark-theme.row.group.span
    nav-list.span-4(items="navs.footer", text-function="appText[item]")
    .row.h-gutters-3.align-right
      .sponsors.span-4
        a(href="{{ appText.sponsor_link }}", target="_blank")
          h4.aligns-middle
            i.icon-sign-blank
            span(co2r-bind="appText.footer_sponsor_name")
        p(co2r-bind="appText.footer_sponsor_description")
      .company.span-3
        a(href="http://takingroot.org", target="_blank"): h4.aligns-middle
          svg-image.co2r-logo(src="/images/logo-white.svg")
          span(co2r-bind="appText.footer_taking_root")
        p(co2r-bind="appText.footer_taking_root_description")
        .row.h-gutters-05(style="font-size:1.5em;")
          a.icon-envelope(href="mailto:info@takingroot.org", ui-jq="popover", title="test", data-content="moo")
          a.icon-twitter(href="https://twitter.com/takingroot")
          a.icon-facebook(href="http://www.facebook.com/TakingRoot?ref=ts")

    br
    span(co2r-bind="appText.switch_language")
    = ' '
    a(ng-click="preferences.set('languageCode', otherLanguage); reloadPage()", ng-bind="otherLanguage | languageName")
    br
    br
    br
    br
    br
    br

    p.muted(co2r-bind="appText.footer_colofon")

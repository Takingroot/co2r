


@import 'styles-variables'


body.directory

  .app-footer
    margin-top gd(4)

  .moodshot
    background url('https://co2r-development.s3.amazonaws.com/heroshots/heroshot-home.jpg') no-repeat center
    background-size cover

  .home-introduction
    &.closed
      height l
      overflow hidden

  .introduction
    background-image url('/images/white-hash-20.png')

  .introduction-toggler
    font-size s
    padding .15em
    size l

  .action-steps-container
    background-color lighten(gray, 5)
    background-image url('/images/white-hash-30.png'), url('/images/white-hash-30.png')
    padding-top gd(2)
    padding-bottom @padding-top

  .action-step:hover
    p
      color textColorDark







//  Search input for Directory listing
//  --------------------------------------------------

.form-search
  margin-top gd(2)
  margin-bottom gd(2)
  input-height = 3.7rem
  input
    background-color transparent
    border 1px solid red
    border-radius 0!important
    padding .4em .5em
    height input-height
    color textColorDark
    font-size 1.25rem
    &::-webkit-input-placeholder
      color #CCC
    &::-ms-input-placeholder
      color #CCC
    &::-moz-placeholder
      color #CCC

    &:focus
      box-shadow none
      border-color red
      outline 10px solid fade-out(red, 0.95)
      color dark
  label
    text-align center
    height input-height
    width input-height
    font-size 2rem
    background-color red
    color grayLight
    // undo bootstrap
    border-radius 0!important
    border none



//  Directory listing (with responsiveness)
//  --------------------------------------------------

.artifact-directory
  block-align center
  margin-bottom gd(5)

@media screen and (max-width:459px)
  directoryGrid(1, cardWidth, cardsGutterWidth)

@media screen and (min-width: 460px) and (max-width:699px)
  directoryGrid(2, cardWidth, cardsGutterWidth)

@media screen and (min-width: 700px) and (max-width:999px)
  directoryGrid(3, cardWidth, cardsGutterWidth)

@media screen and (min-width: 1000px) and (max-width:1299px)
  directoryGrid(4, cardWidth, cardsGutterWidth)

@media screen and (min-width: 1300px) and (max-width:1799px)
  directoryGrid(5, cardWidth, cardsGutterWidth)

@media screen and (min-width: 1800px)
  directoryGrid(6, cardWidth, cardsGutterWidth)

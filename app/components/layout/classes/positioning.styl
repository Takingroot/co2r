


//
//  Hanging
//  ------------------------------------------------------------------

[class^="hang-"], [class*=" hang-"]
  position absolute

.hang-left
  left 0
  > .hang-inner
    right 0

.hang-right
  right 0
  > .hang-inner
    left 0


.float-left           { float:left;         }
.float-right          { float:right;        }
.block                { display:block;      }

.vintage-box-models * { box-sizing: content-box; }

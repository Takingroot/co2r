header
  .register__header.row.vpadding-l

    .introduction.cols4
      h1
        i.icon-file
        | 
        span(bind-compile="appText.register_your_product")
      p(bind-compile="appText.register_introduction")

    form.register__form.cols7.grid-push1(ng-submit="sendForm()", name="artifactRegistrationForm")
      .row
        .cols6
          textarea.span(rows="9", placeholder="{{appText.your_message}}", ng-model="org.message", required)
        div.cols6
          .control-group
            .input-prepend.span
              label.add-on(for="name"): i.icon-user
              input#name.span(type="text", placeholder="{{appText.name_or_organization}}", ng-model="org.name", required)
          .control-group
            .input-prepend.span
              label.add-on(for="email"): i.icon-envelope
              input#email.span(type="email", placeholder="{{appText.email}}", ng-model="org.email", required)
          .control-group
            .input-prepend.span
              label.add-on(for="phone"): i.icon-phone
              input#phone.span(type="text", placeholder="{{appText.phone}}", ng-model="org.phone", required)
          .control-group
            button.btn.span(style="box-sizing:border-box;", ng-bind="appText.inquire", ng-disabled="!artifactRegistrationForm.$valid")


section.register__info-container
  .grid-bounds-desktop
    .register__info-container-inner.span
      aside.register__info-aside-container.text-context
        .register__info-aside(bind-compile="appText.register_artifact_left_column")
      article.register__info-body-container
        .register__info-body.text-container-l(bind-compile="appText.register_artifact_right_body")



.post-artifact-registration-message.modal(style="display:none")
  .modal-header
    button.close(data-dismiss="modal") &times;
    h1 Thank-you!
  .modal-body
    p
      | Your registration request has been sent!
      br
      | This is the email that you sent:
    pre(ng-bind-html="email.message")

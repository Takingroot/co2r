app-nav-dark  = lighten(dark, 10)
app-nav-light = saturate(lighten(light, 12),15)

// TODO make themeing modular?
// increase specificity to override bootstrap
html body

  .dark-theme .nav-item
    &.current-view
    &:hover
      background-color darken(dark, 10%)
      color lighten(light, 10)


  .nav-item
    &:hover
      background-color darken(app-nav-dark, 10%)
      color lighten(app-nav-light, 10)
    &.current-view
      a
        cursor default
      background-color darken(app-nav-dark, 20%)
      color lighten(app-nav-light, 10)


  .dark-theme .nav-link
    color light

  .nav-link
    color app-nav-light
    // undo bootstrap
    margin 0!important
    text-shadow none
    &:hover
      background none
    // undo end


.app-navbar
  background-color app-nav-dark
  .co2r-logo
    margin -5px 5px 0 10px
    square(30px)
    float left


  .nav-list
    margin-bottom 0
    //undo bootstrap
    padding 0

  .nav-link
    padding 25px 10px

// this needs to be defined after font
// classes to override them
.unspaced
  margin 0 _
  line-height 1

.text-color-inverse
  color textColorInverse

.text-container
  // comfortable reading width
  max-width 30rem

.text-context, article
  p, img
    &:not(:last-child)
      margin-bottom 1.875em

  h1, h2
    &:not(:last-child)
      margin-bottom (1.875em / 3)

  h3, h4, h5, h6
    &:not(:last-child)
      margin-bottom (1.875em / 1.5)

  img
    display block

.carousel.slide
  overflow hidden

.carousel
  overflow hidden
  // some default styling, visible before images load
  background-color dark
  // undo bootstrap
  margin-bottom 0

  .item
    background-overlay url('/images/white-hash-20.png')
    height 100%
    overflow hidden
    // display: undo bootstrap
    display block
    absolute 0 _ _ _
    img
      width 100%
    transition opacity 1s
    opacity 0
    &.active
      opacity 1

.carousel-caption
  absolute _ 0 0 _
  max-width gd(16)
  display inline-block
  // z-index so that caption is on top of hash texture
  z-index 20
  color grayLight
  background-color hsla(60.00, 1.08%, 18.24%, 0.9)
  padding .9em 1.25em

  // undo bootstrap
  line-height 1.5

@media screen-xs
  .carousel-caption
    display none

.carousel-item
  display relative
  z-index 10

.carousel-spinner
  z-index 1
  display inline-block
  font-size 3rem
  absolute 50% _ _ _
  margin -0.5em _ _ -0.5em
  color white
  opacity 1
  transition opacity 500ms

.carousel-item-probably-loaded .carousel-spinner
  opacity 0

//  nav icons stacked
@media (min-width: 560px) and (max-width: 1323px)
  .app-navbar
    .nav-item
      border-width 0!important
@media (min-width: 560px)
  .app-header
    inline-block-container()
  .app-navbar .nav
    block-container()

//  nav icons + text stacked
@media (min-width: 700px)
  .app-navbar
    .nav-link-text
      display inline-block
    .nav-item
      min-width 146px
    .nav-link
      text-transform capitalize
    .nav-link-icon
      font-size 1.5em
      margin-right 0.25em



  .tooltip.nav-item
    .tooltip-content-title
      display none
    .tooltip-content-body
      width 146px

//  nav icons + text horizontal
@media desktopWide
  .app-navbar
    margin-top gd(5)
    margin-right gd(1)
    float right
    .nav
      inline-block-container()

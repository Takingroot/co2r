


// undo bootstrap
.tooltip.nav-item
  .tooltip-inner
    padding 0

.app-navbar
  .nav-list
    padding 0
  .nav-link
    margin 0!important
    text-shadow none
    &:hover
      background none
// undo end



.app-navbar
  .nav-list
    margin-bottom 0
  .nav-item + .nav-item
    border-left 1px solid darkMuted
  // sometimes we need to meld the nav item
  // dividers into the highlight
  .nav-item.current-view
  .nav-item.current-view + .nav-item
    border-left-color dark
  .nav-item
    min-width 0
    //text-align center
    // Important: Source order
    // - the following selectors are in order
    //   the lower ones override the upper ones
    &:hover .nav-link
      background-color fade-out(dark, 0.98)
      color darken(textColorDark, 20)
    &:active .nav-link
      background-color fade-out(dark, 0.9)
      color darken(textColorDark, 20)
    &.current-view .nav-link
      cursor default
      background-color dark
      color textColorLight
  .nav-link
    padding 0.7em 1.5em
  .nav-link-icon
    font-size 2rem
    // vertical center because font-awesome fails by a few a pixels
    vertical-shift(0.05em)
  .nav-link-text
    display none



.tooltip.nav-item
  tooltip-background-color(dark)
  .tooltip-inner
    stop-collapse()
    border-radius 0
    font-size 0.8rem
    line-height 1.5
    min-height gd(3)
  // put padding on content containers
  // so that we can allow width/padding
  // to be on the same container
  .tooltip-content-title
    margin-top 0.5em
    margin-bottom 0
    // no vertical padding, h{n} tag provides vertical space
    padding-left 1em
    padding-right 1em
  .tooltip-content-body
    width 180px
    padding-top 0
    padding 1em
    // centering for when content title is wider than body
    margin-left auto
    margin-right auto



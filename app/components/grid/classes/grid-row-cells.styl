


//
//  Row-cells
//  --------------------------------------------------
//
//  Description:
//  Children heights are linked



.row-cells
  display table
  block-align center
  & > *
    display table-cell
    vertical-align top

@media screen-xs
  .row-cells
    max-width 400px
    display block
    padding-left  grid-column-gutter-width
    padding-right grid-column-gutter-width
    & > *
      display block

@media screen-s
  .row-cells
    max-width screen-w-s

@media screen-m
  .row-cells
    max-width screen-w-m

@media screen-l
  .row-cells
    max-width screen-w-l
